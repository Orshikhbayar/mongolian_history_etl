# Environment configuration for Mongolian History Generator
# Copy this file to .env and fill in your actual values

# OpenAI API Configuration (REQUIRED)
OPENAI_API_KEY=your_openai_api_key_here

# Optional Configuration (defaults will be used if not specified)
OPENAI_MODEL=gpt-4o-mini
OPENAI_TEMPERATURE=0.25
OPENAI_MAX_TOKENS=900

# Application Configuration
MAX_RETRIES=3
OUTPUT_DIR=./data/generated
OUTPUT_FILENAME=mongolian_history_dataset.json
REPORT_FILENAME=generation_report.json

# Logging Configuration
LOG_LEVEL=INFO
LOG_DIR=./logs